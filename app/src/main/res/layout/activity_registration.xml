<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="48dp"
    tools:layout_editor_absoluteY="-30dp">

    <LinearLayout
        android:id="@+id/banner"
        android:layout_width="514dp"
        android:layout_height="101dp"
        android:background="#F25858"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/menuButton"
        android:layout_width="70dp"
        android:layout_height="51dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:contentDescription="@string/menu_button_desc"
        android:focusable="true"
        android:src="@drawable/menuicon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bannerLogo"
        android:layout_width="250dp"
        android:layout_height="123dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-70dp"
        android:contentDescription="@string/logo_desc"
        android:src="@drawable/headerlogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner"
        app:layout_constraintVertical_bias="0.2" />


    <TextView
        android:id="@+id/registerHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/bungeeshade"
        android:text="Register"
        android:textColor="#000000"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner" />


    <EditText
        android:id="@+id/name"
        android:layout_width="242dp"
        android:layout_height="51dp"
        android:background="@drawable/textbox"
        android:contentDescription="Name input field"
        app:layout_constraintBottom_toBottomOf="@id/nameHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.147"
        app:layout_constraintStart_toEndOf="@id/nameHeader"
        app:layout_constraintTop_toTopOf="@id/nameHeader"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/dob"
        android:layout_width="242dp"
        android:layout_height="51dp"
        android:background="@drawable/textbox"
        android:contentDescription="Date of Birth input field"
        app:layout_constraintBottom_toBottomOf="@id/dobHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.147"
        app:layout_constraintStart_toEndOf="@id/dobHeader"
        app:layout_constraintTop_toTopOf="@id/dobHeader"
        app:layout_constraintVertical_bias="0.23" />

    <EditText
        android:id="@+id/email"
        android:layout_width="242dp"
        android:layout_height="51dp"
        android:background="@drawable/textbox"
        android:contentDescription="Email address input field"
        app:layout_constraintBottom_toBottomOf="@+id/emailHeader"
        app:layout_constraintStart_toStartOf="@+id/password"
        app:layout_constraintTop_toTopOf="@+id/emailHeader"
        app:layout_constraintVertical_bias="0.461" />

    <EditText
        android:id="@+id/username"
        android:layout_width="242dp"
        android:layout_height="51dp"
        android:background="@drawable/textbox"
        android:contentDescription="Username input field"
        app:layout_constraintBottom_toBottomOf="@+id/usernameHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/usernameHeader"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/usernameHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/bungeespice"
        android:text="Username"
        android:textColor="#528f8f"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/passwordHeader"
        app:layout_constraintTop_toBottomOf="@id/emailHeader" />

    <TextView
        android:id="@+id/passwordHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungeespice"
        android:text="PASSWORD"
        android:textColor="#528f8f"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/registerButton"
        app:layout_constraintEnd_toStartOf="@+id/password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email" />


    <TextView
        android:id="@+id/emailHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/bungeespice"
        android:text="Email"
        android:textColor="#528f8f"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/usernameHeader"
        app:layout_constraintTop_toBottomOf="@id/dobHeader" />

    <TextView
        android:id="@+id/dobHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/bungeespice"
        android:text="DOB"
        android:textColor="#528f8f"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/emailHeader"
        app:layout_constraintTop_toBottomOf="@id/nameHeader" />

    <TextView
        android:id="@+id/nameHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/bungeespice"
        android:text="Name"
        android:textColor="#528f8f"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/dobHeader"
        app:layout_constraintTop_toBottomOf="@id/registerHeader" />


    <EditText
        android:id="@+id/password"
        android:layout_width="242dp"
        android:layout_height="51dp"
        android:background="@drawable/textbox"
        android:contentDescription="Enter your password"
        android:importantForAccessibility="yes"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/passwordHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/passwordHeader"
        app:layout_constraintTop_toTopOf="@+id/passwordHeader"
        app:layout_constraintVertical_bias="0.538" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registerButton"
        android:layout_width="239dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginTop="608dp"
        android:background="@drawable/rounded_button"
        android:padding="1dp"
        android:text="Register"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/banner" />

    <LinearLayout
        android:id="@+id/emailUpdatesLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/registerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></LinearLayout>

    <RadioButton
        android:id="@+id/emailUpdatesRadioButton"
        android:layout_width="34dp"
        android:layout_height="52dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="Check this box to receive email updates"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/emailUpdatesText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerButton"
        app:layout_constraintVertical_bias="0.196" />

    <TextView
        android:id="@+id/emailUpdatesText"
        android:layout_width="358dp"
        android:layout_height="46dp"
        android:contentDescription="Text indicating user wants to receive email updates"
        android:fontFamily="@font/bungeespice"
        android:text="Yes, sign me up. I would like to receive email updates from ExploreXpert!"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/emailUpdatesRadioButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/emailUpdatesRadioButton"
        app:layout_constraintTop_toTopOf="@+id/emailUpdatesRadioButton"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>

