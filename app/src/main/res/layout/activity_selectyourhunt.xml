<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <!-- Banner -->
        <LinearLayout
            android:id="@+id/banner"
            android:layout_width="514dp"
            android:layout_height="75dp"
            android:background="#F25858"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </LinearLayout>


        <ImageView
            android:id="@+id/menuButton"
            android:layout_width="50dp"
            android:layout_height="51dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="18dp"
            android:clickable="true"
            android:contentDescription="@string/menu_button_desc"
            android:focusable="true"
            android:src="@drawable/menuicon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/bannerLogo"
            android:layout_width="300dp"
            android:layout_height="133dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-80dp"
            android:contentDescription="@string/logo_desc"
            android:src="@drawable/logoupdated"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/banner"
            app:layout_constraintVertical_bias="0.2" />

        <!-- Header Text -->
        <TextView
            android:id="@+id/forgotPasswordHeader"
            android:layout_width="373dp"
            android:layout_height="168dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bungeeshade"
            android:text="SELECT YOUR HUNT"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/banner" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Example hunt 1"
            android:textColor="#528F8F"
            android:textSize="16sp"
            android:fontFamily="@font/merriweatherregular"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/forgotPasswordHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textView2"
            app:layout_constraintHorizontal_bias="0" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Example hunt 2"
            android:textColor="#528F8F"
            android:textSize="16sp"
            android:fontFamily="@font/merriweatherregular"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/forgotPasswordHeader"
            app:layout_constraintStart_toEndOf="@id/textView1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1" />

        <!-- Second Row -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Example hunt 3"
            android:textColor="#528F8F"
            android:textSize="16sp"
            android:fontFamily="@font/merriweatherregular"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/textView1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textView4"
            app:layout_constraintHorizontal_bias="0" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Example hunt 4"
            android:textColor="#528F8F"
            android:textSize="16sp"
            android:fontFamily="@font/merriweatherregular"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/textView2"
            app:layout_constraintStart_toEndOf="@id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1" />

        <!-- Third Row -->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Example hunt 5"
            android:textColor="#528F8F"
            android:textSize="16sp"
            android:fontFamily="@font/merriweatherregular"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textView6"
            app:layout_constraintHorizontal_bias="0" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Example hunt 6"
            android:textColor="#528F8F"
            android:textSize="16sp"
            android:fontFamily="@font/merriweatherregular"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/textView4"
            app:layout_constraintStart_toEndOf="@id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1" />

        <!-- Fourth Row -->
        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Example hunt 7"
            android:textColor="#528F8F"
            android:textSize="16sp"
            android:fontFamily="@font/merriweatherregular"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/textView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textView8"
            app:layout_constraintHorizontal_bias="0" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Example hunt 8"
            android:textColor="#528F8F"
            android:textSize="16sp"
            android:fontFamily="@font/merriweatherregular"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/textView6"
            app:layout_constraintStart_toEndOf="@id/textView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1" />

        <!-- Fifth Row -->
        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Example hunt 9"
            android:textColor="#528F8F"
            android:textSize="16sp"
            android:fontFamily="@font/merriweatherregular"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/textView7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textView10"
            app:layout_constraintHorizontal_bias="0" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Example hunt 10"
            android:textColor="#528F8F"
            android:textSize="16sp"
            android:fontFamily="@font/merriweatherregular"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/textView8"
            app:layout_constraintStart_toEndOf="@id/textView9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

